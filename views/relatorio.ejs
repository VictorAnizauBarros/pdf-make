<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Relatório de Clientes - Sistema Profissional</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      body {
        background-color: #f8f9fa;
      }
      .navbar {
        background-color: #343a40;
      }
      .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
      }
      .btn-primary:hover {
        background-color: #0056b3;
      }
      .table th {
        background-color: #e9ecef;
      }
      footer {
        background-color: #343a40;
        color: white;
        text-align: center;
        padding: 10px;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">Sistema de Relatórios</span>
      </div>
    </nav>

    <div class="container mt-5">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header bg-primary text-white">
              <h2 class="card-title mb-0">Relatório de Clientes</h2>
            </div>
            <div class="card-body">
              <form method="GET" class="mb-4">
                <div class="input-group">
                  <input
                    type="text"
                    name="search"
                    class="form-control"
                    placeholder="Buscar por nome..."
                    value="<%= search %>"
                  />
                  <button class="btn btn-outline-primary" type="submit">
                    Buscar
                  </button>
                  <% if (search) { %>
                  <a href="/" class="btn btn-outline-secondary">Limpar</a>
                  <% } %>
                </div>
              </form>

              <div
                class="d-flex justify-content-between align-items-center mb-3"
              >
                <p class="mb-0">Total de registros: <%= users.length %></p>
                <a
                  href="/relatorio/pdf<%= search ? '?search=' + encodeURIComponent(search) : '' %>"
                  class="btn btn-success"
                  >Gerar PDF</a
                >
              </div>

              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead class="table-dark">
                    <tr>
                      <th>ID</th>
                      <th>Nome</th>
                      <th>E-mail</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% users.forEach(user => { %>
                    <tr>
                      <td><%= user.id %></td>
                      <td><%= user.name %></td>
                      <td><%= user.email %></td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>

              <% if (users.length === 0) { %>
              <div class="alert alert-info text-center">
                Nenhum usuário encontrado.
              </div>
              <% } %>
            </div>
            <div class="card-footer text-muted text-end">
              Gerado em: <%= new Date().toLocaleDateString('pt-BR') %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer>
      <p>&copy; 2025 Sistema de Relatórios. Todos os direitos reservados.</p>
    </footer>
  </body>
</html>
